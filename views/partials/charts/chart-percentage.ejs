<script type="text/javascript">
    var canvases = document.querySelectorAll('[data-chart-percentage-bar]');
    canvases.forEach(canvas => {
        const value = canvas.getAttribute('data-chart-percentage-bar');
        var ctx = canvas.getContext('2d');
        var chart = new Chart(ctx, {
            type: 'horizontalBar',
            data: {
                // labels: [canvas.getAttribute('data-chart-label')],
                datasets: [{
                    label: [value],
                    data: [parseFloat(value)],
                    backgroundColor: ['rgba(54, 162, 235, 0.4)'],
                    borderColor: ['rgba(54, 162, 235, 1)'],
                    borderWidth: 1,
                    barThickness: 10,
                }],
            },
            options: {
                aspectRatio: 4,
                title: { display: false },
                legend: { display: false },
                scales: {
                    xAxes: [{
                        display: false,
                        offset: false,
                        gridLines: {
                            offsetGridLines: false,
                        },
                        ticks: {
                            min: 0,
                            max: 100,
                            stepSize: 10
                        },
                    }],
                    yAxes: [{
                        display: false,
                        gridLines: {
                            offsetGridLines: false,
                        },
                    }],
                },
                tooltips: { enabled: false },
            },
        })
    });
</script>