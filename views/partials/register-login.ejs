<div id="<%- id %>" class="canvas-modal">
    <span onclick="document.getElementById('<%- id %>').style.display='none'" class="close" title="Close">&times;</span>
    <form id="<%- id %>_form" class="canvas-content" autocomplete="off">
        <h2><%- title %></h2>
        <label for="email">Email</label>
        <input type="email" name="email" required autofocus />
        <div class="email error"></div>
        <label for="password">Password</label>
        <input type="password" name="password" required />
        <div class="password error"></div>
        <button title="Submit to <%- title %>"><%- title %></button>
    </form>
</div>

<script type="text/javascript">
    var canvas_<%- id %> = document.getElementById("<%- id %>");
    var form_<%- id %> = document.getElementById("<%- id %>_form");
    
    // if the user clicks anywhere in the canvas
    canvas_<%- id %>.addEventListener('click', (e) => {
        if (e.target == canvas_<%- id %>) {
            canvas_<%- id %>.style.display = 'none';
        }
    });
    
    // if the user clicks submit button
    form_<%- id %>.addEventListener('submit', async (e) => {
        e.preventDefault();
        
        // get elements
        const emailError = document.querySelector('#<%- id %>_form .email.error');
        const passwordError = document.querySelector('#<%- id %>_form .password.error');

        // reset errors
        emailError.textContent = '';
        passwordError.textContent = '';

        // get values
        const email = form_<%- id %>.email.value;
        const password = form_<%- id %>.password.value;

        try {
            const res = await fetch('/auth/<%- post %>', {
                method: 'POST',
                body: JSON.stringify({ email, password }),
                headers: { 'Content-Type': 'application/json' }
            });
            const data = await res.json();
            console.log(data);
            if (data.errors) {
                emailError.textContent = data.errors.email;
                passwordError.textContent = data.errors.password;
            }
            if (data.user) {
                canvas_<%- id %>.style.display = 'none';
                location.assign('/show');
            }
        }
        catch (err) {
            console.log(err);
        }
    });
</script>
